#!/sbin/openrc-run
description="Run Alpine Installer"
depend() {
  need localmount net
  after dhcpcd
}

start() {
  # Only run installer if alpine.slot=installer
  slot=$(/usr/libexec/alpine-get-cmdline alpine.slot)
  if [ "$slot" = "installer" ]; then
    ebegin "Running Alpine Installer"
    alpine-install
    eend $?
  fi
}     