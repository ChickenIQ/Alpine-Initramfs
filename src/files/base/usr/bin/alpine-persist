#!/bin/sh -e

type="$1"
local_path="$2"
data_path="/data${local_path}"

if ! mountpoint -q /data; then
  echo "/data is not mounted" >&2
  exit 1
fi

if [ "$type" != "file" ] && [ "$type" != "directory" ] || [ -z "$local_path" ]; then
  echo "Usage: $0 {file|directory} path" >&2
  exit 1
fi

make_path() {
  type="$1"
  path="$2"

  if [ "$type" = "directory" ]; then
    mkdir -p "$path"
  else
    mkdir -p "$(dirname "$path")"
    touch "$path"
  fi
}

make_path "$type" "$data_path"
make_path "$type" "$local_path"

mount --bind "$local_path" "$data_path"